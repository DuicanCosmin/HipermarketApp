@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<h1>All role</h1>

@if(Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
           
        </div>
        <div class="card-body">
            <h5 class="card-title">
                @role.Name
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="EditRole" asp-controller="Account" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
            @*<a herf="#" class="btn btn-primary">Delete</a>*@
        </div>
    }
}
else
{

}